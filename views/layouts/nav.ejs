        <li>
          <a href="/<%= pagePost.slugOfPage %>"
            ><%= pagePost.pagePostTitle %></a
          >
        </li>
        <% } %>
      </ul>
    </div>
    <% } else { %>
    <a href="/adminpanel">Admin Panel</a>
  </div>
  <% } %>
