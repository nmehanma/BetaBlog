<nav class="nav_menu">
  <div class="login">
    <% if (admin !== 'admin') { %>
    <a href="/login">Login</a>
    <% } else { %>
    <a href="/logout">Logout</a>
    <% } %>
  </div>
  <div class="dropdown">
    <% if (admin === "admin") { %>
    <a href="/adminpanel">Admin Panel</a>
